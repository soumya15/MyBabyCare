<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:text="@string/btn_addEvent"
        android:id="@+id/btn_addNewEvent"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:gravity="center"
        android:drawableStart="@drawable/add_icon"
        android:background="#ffcfce52"
        android:onClick="openAddEventView"
        android:textStyle="bold" />

    <Button
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:text="@string/btn_viewEvents"
        android:id="@+id/btn_viewEvents"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/btn_addNewEvent"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/search_icon"
        android:textSize="17dp"
        android:gravity="center"
        android:background="#ffcfce52"
        android:textStyle="bold"
        android:onClick="showAllEvents"/>



</RelativeLayout>
